{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "composite": true,
        "lib": [
            "ES2015",
            "DOM",
            "DOM.Iterable"
        ],
        "rootDir": "src",
        "outDir": "out",
        "useDefineForClassFields": false,
    },
    "include": [
        "src"
    ]
}
